{
  "root": true,
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["apps/web/tsconfig.json"]
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "./apps/web/tsconfig.json"
      }
    }
  },
  "ignorePatterns": ["node_modules/*"],
  "extends": ["next/core-web-vitals", "next/typescript", "eslint:recommended"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}
